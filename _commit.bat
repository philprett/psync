@echo off

cd /d %~dp0

rem ============================================================
rem Do the ADD
rem ============================================================
title PSync - ADD
git add .

rem ============================================================
rem Do the COMMIT
rem ============================================================
title PSync - COMMIT
git commit -m Update

rem ============================================================
rem Do the PUSH
rem ============================================================
title PSync - PUSH
git push
if errorlevel 1 pause

rem ============================================================
rem Finished
rem ============================================================
goto :EOF

rem ============================================================
rem Error
rem ============================================================
:error
pause
goto :EOF
 